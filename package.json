{
  "name": "short-sha",
  "version": "0.0.0",
  "private": true,
  "description": "Github Action to shorten the git SHA1 and make it accessible in outputs",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc && ncc build",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "test": "jest",
    "all": "yarn build && yarn format && yarn lint && yarn pack && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/step-security/short-sha.git"
  },
  "keywords": [
    "actions",
    "git"
  ],
  "author": "step-security",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^6.0.0",
    "axios": "^1.9.0"
  },
  "devDependencies": {
    "@types/jest": "^29.2.0",
    "@types/node": "^18.11.7",
    "@typescript-eslint/parser": "^5.41.0",
    "@vercel/ncc": "^0.34.0",
    "eslint": "^8.26.0",
    "eslint-plugin-github": "^4.4.0",
    "eslint-plugin-jest": "^28.13.3",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.2.2",
    "jest-circus": "^29.2.2",
    "js-yaml": "^4.1.0",
    "prettier": "^2.7.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.8.4"
  }
}
